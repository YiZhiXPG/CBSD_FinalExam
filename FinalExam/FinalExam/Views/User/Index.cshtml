@model IEnumerable<FinalExam.Models.ProblemInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>This is User Page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@*For Display Problem Info*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detial)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var pro in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => pro.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => pro.Detial)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@pro.ID">Edit</a>
                <a asp-action="Details" asp-route-id="@pro.ID">Details</a>
                <a asp-action="Delete" asp-route-id="@pro.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>